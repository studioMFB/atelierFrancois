{
  "include": [
    "src/**/*",
    "dist",
    "./src/components/modelViewer/textures/terrains.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "types": [
      "node",
      "vite/client",
      "react",
      "react-dom",
    ],
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "jsx":"preserve",
    "baseUrl": "dist",
    "outDir": "dist",
    "module": "ES2022",
    "target": "ES2022",
    "allowJs": false,
    "noImplicitAny": false,
    "strict": false,
    "noEmit": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
  }
}